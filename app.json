{
  "expo": {
    "name": "VoiceNotion",
    "slug": "voicenotion",
    "scheme": "voicenotion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voicenotion.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "VoiceNotion needs access to your microphone to record voice notes and commands.",
        "NSPhotoLibraryUsageDescription": "VoiceNotion needs access to your photo library to allow you to add images to your notes.",
        "NSCameraUsageDescription": "VoiceNotion needs access to your camera to allow you to take photos for your notes.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.voicenotion.app",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "voicenotion"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-secure-store",
        {
          "faceIDPermission": "VoiceNotion needs to access your Face ID to secure your notes."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "VoiceNotion needs access to your microphone to record voice notes and commands."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "owner": "voicenotion",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id",
      "fallbackToCacheTimeout": 0,
      "enabled": true
    }
  }
}
